{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "npm run build"
      }
    }
  ],
  "functions": {
    "api/*": {
      "memory": 1024,
      "maxDuration": 10
    },
    "src/app/api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "VERCEL": "1"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
} 